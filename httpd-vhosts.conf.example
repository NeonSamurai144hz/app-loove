# httpd-vhosts.conf.example
# Copy this file to your Apache configuration directory and rename it to httpd-vhosts.conf
# Then customize paths and other settings for your local environment

<VirtualHost *:80>
    # Domain name the virtual host responds to
    ServerName sweep.local

    # Path to the project's frontend directory (customize this for your environment)
    DocumentRoot "/path/to/sweep/frontend"

    # Directory permissions and settings
    <Directory "/path/to/sweep/frontend">
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Require all granted
    </Directory>

    # API requests redirection - routes API calls to the backend
    <Directory "/path/to/sweep/frontend/api">
        RewriteEngine On
        RewriteRule ^(.*)$ /backend/api.php?url=$1 [QSA,L]
    </Directory>

    # Log file locations (customize for your environment)
    ErrorLog "logs/sweep-error.log"
    CustomLog "logs/sweep-access.log" common
</VirtualHost>